#!/bin/sh
# A script for checking new yay updates

# Requires sudo permisions to run tho

ping -q -c 1 1.1.1.1 > /dev/null || exit

notify-send "ðŸ“¦ Repository Sync" "Checking for package updates..."

# Hardcoded !!!
sudo "$HOME"/.local/bin/scripts/yaysync || notify-send "Error checking for updates" 

nupdates=$(yay -Qu | wc -l)

if [ "$nupdates" -eq 0 ];
then
	notify-send "ðŸ“¦ No updates found"
else 
	notify-send "ðŸ“¦ There are $nupdates package updates"
fi

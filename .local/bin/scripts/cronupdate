#!/bin/sh
# A script for checking new yay updates

# Requires sudo permisions to run tho

ping -q -c 1 1.1.1.1 > /dev/null || exit

notify-send "ğŸ“¦ Repository Sync" "Checking for package updates..."

# Hardcoded !!!
sudo /home/druskus/.local/bin/scripts/yayfix || notify-send "Error checking for updates" 

nupdates=$(yay -Qu | wc -l)

if [ "$nupdates" -eq 0 ];
then
	notify-send "ğŸ“¦ No updates found"
else 
	notify-send "ğŸ“¦ There are $nupdates package updates"
fi
